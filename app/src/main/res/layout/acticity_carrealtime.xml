<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#4af"/>-->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4Af"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_back_carrealtime"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/ic_back" />

        <TextView
            android:id="@+id/tv_title_mian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/case_of_car"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_title_right"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_title_carreal"
        android:background="#4af"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="#ccc"
        app:tabSelectedTextColor="#fff"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager_carreal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>