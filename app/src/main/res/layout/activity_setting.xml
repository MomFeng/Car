<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4Af"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_setting_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#4af" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="@string/intent"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lea_intent_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ripple_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="@string/WIFI_only_under_the_network"
                        android:textColor="#000"
                        android:gravity="bottom|left"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="@string/no_consumption_under_the_network"
                        android:gravity="top|left"
                        android:textSize="10sp" />
                </LinearLayout>

                <com.example.administrator.car.view.SwitchView
                    android:id="@+id/sv_intent_setting"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lea_bluetooth_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ripple_bg"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/automatically_turn_on_the_Bluetooth_connection_vehicle"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <com.example.administrator.car.view.SwitchView
                    android:id="@+id/sv_bluetooth_setting"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="@string/language"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lea_setting_default"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ripple_bg"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/follow_the_system_language"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_setting_default"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_correct" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lea_setting_simplechinese"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ripple_bg"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="简体中文"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/img_setting_simplechinese"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lea_setting_traditionalchinese"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ripple_bg"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="繁體中文"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_setting_traditionalchinese"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lea_setting_english"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ripple_bg"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="English"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_setting_english"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_white" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="@string/about"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="@string/help_with_feedback"
                android:textColor="#000"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/ripple_bg"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="@string/about_us"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ripple_bg"
                android:gravity="center"
                android:text="@string/switch_account"
                android:textColor="#f00"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>