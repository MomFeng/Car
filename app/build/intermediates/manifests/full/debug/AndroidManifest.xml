<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.car"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />
    <!-- 允许程序读取或写入系统设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 允许程序访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序写入但不读取用户联系人数据 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 允许一个程序修改当前设置，如本地化 -->
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:name="com.example.administrator.car.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.administrator.car.activity.StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.administrator.car.activity.SettingActivity" />
        <activity android:name="com.example.administrator.car.carrealtime.CarrealtimeActivity" />
        <activity android:name="com.example.administrator.car.activity.PhotoActivity" />
        <activity android:name="com.example.administrator.car.activity.MainActivity" />
        <activity android:name="com.example.administrator.car.activity.glide.Glide" />

        <service android:name="com.example.administrator.car.service.LockscreenService" />

        <activity
            android:name="com.example.administrator.car.activity.LockscreenActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:taskAffinity="com.package.name.lockscreen"
            android:theme="@style/LockScreenBase" >
            >
        </activity>
    </application>

</manifest>